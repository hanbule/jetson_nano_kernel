		csi_base: nvcsi {
			num-channels = <2>;
			csi_chan0: channel@0 {
				status = "okay";
				ports {
					csi_chan0_port0: port@0 {
						status = "okay";
						rbpcv2_imx219_csi_in0: endpoint@0 {
